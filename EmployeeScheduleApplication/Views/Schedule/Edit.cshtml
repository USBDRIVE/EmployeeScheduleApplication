@model EmployeeScheduleApplication.Models.Schedule

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edit</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScheduleId" />
            <div class="form-group">
                <label asp-for="Shifts" class="control-label"></label>
                <input asp-for="Shifts" class="form-control" />
                <span asp-validation-for="Shifts" class="text-danger"></span>
            </div>
            <div>
                <a asp-action="Create" asp-controller="Shift">make a new shift</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
